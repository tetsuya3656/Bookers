<hi>Books</hi>


<table>
  <thead>
    <tr>
     <th>Title</th>
     <th>Body</th>
     <th colspan="3"></th>
    </tr> 
  </thead>
<% @books.each do |book| %>
  <tbody>
   <tr>
     <td>
      <%= link_to book.title, book_path(book.id) %>
      <%= link_to book.body, book_path(book.id) %>
      <a>Show</a>
      <a>Edit</a>
      <a>Destroy</a>
     </td>
   </tr> 
  </tbody>
<% end %>  
</table>
 